<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<xml>
	<application default_content_type="text/html">
		<paths>
			<controllers>application/controllers</controllers>
			<views>application/views</views>
			<reporters>application/models/errors/reporters</reporters>
			<renderers>application/models/errors/renderers</renderers>
		</paths>
		<display_errors>
			<local>1</local>
		</display_errors>
	</application>
	<reporters>
		<local>
			<reporter class="FileReporter" path="errors" format="%d %f %l %m"/>
		</local>
	</reporters>
	<renderers>
		<renderer content_type="text/html" class="HtmlRenderer" charset="UTF-8"/>
		<renderer content_type="application/json" class="JsonRenderer" charset="UTF-8"/>
	</renderers>
	<exceptions error_type="LOGICAL" controller="ErrorsController">
		<exception class="Lucinda\MVC\STDOUT\PathNotFoundException"  http_status="404 Not Found" error_type="CLIENT" view="404"/>
		<exception class="Lucinda\MVC\STDOUT\MethodNotAllowedException"  http_status="405 Method Not Allowed" error_type="CLIENT" view="405"/>
		<exception class="Lucinda\Framework\SecurityPacket" controller="SecurityPacketController" error_type="NONE"/>
		<exception class="Lucinda\WebSecurity\SessionHijackException"  http_status="400 Bad Request" error_type="CLIENT" view="400"/>
		<exception class="Lucinda\WebSecurity\EncryptionException"  http_status="400 Bad Request" error_type="CLIENT" view="400"/>
		<exception class="Lucinda\WebSecurity\TokenException"  http_status="400 Bad Request" error_type="CLIENT" view="400"/>
		<exception class="Lucinda\MVC\STDOUT\FileUploadException" http_status="400 Bad Request" error_type="SERVER" view="400"/>
		<exception class="Lucinda\SQL\ConnectionException" error_type="SERVER" controller="ErrorsController"/>
		<exception class="Lucinda\NoSQL\ConnectionException" error_type="SERVER" controller="ErrorsController"/>
		<exception class="Lucinda\NoSQL\OperationFailedException" error_type="SERVER" controller="ErrorsController"/>
		<exception class="OAuth2\ServerException" error_type="SERVER" controller="ErrorsController"/>
		<exception class="Lucinda\NoSQL\KeyNotFoundException" error_type="SYNTAX" controller="ErrorsController"/>
		<exception class="Lucinda\SQL\StatementException" error_type="SYNTAX" controller="ErrorsController"/>
		<exception class="Lucinda\MVC\STDERR\PHPException" error_type="SYNTAX" controller="ErrorsController"/>
		<exception class="Lucinda\Templating\ViewException" error_type="SYNTAX" controller="ErrorsController"/>
	</exceptions>
</xml>