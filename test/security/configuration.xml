<xml>
    <application>
        <default_page>index</default_page>
        <default_extension>html</default_extension>
        <auto_routing>0</auto_routing>
        <paths>
        	<dao>dao</dao>
        </paths>
    </application>
    <routes>
        <route url="login"/>
        <route url="index"/>
        <route url="logout"/>
        <route url="private"/>
        <route url="missing"/>
    </routes>
    <formats>
        <format extension="html" content_type="text/html" charset="UTF-8"/>
    </formats>
    <security>
        <csrf secret="asdf"/>
        <persistence>
            <synchronizer_token secret="rrwe"/>
        </persistence>
        <authentication>
            <form dao="UserAuthentication">
                <login/>
                <logout/>
            </form>
        </authentication>
        <authorization>
			<by_dao page_dao="PageAuthorization" user_dao="UserAuthorization"/>
        </authorization>
    </security>
</xml>